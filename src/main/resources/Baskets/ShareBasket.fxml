<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="207.0" prefWidth="313.0" stylesheets="@../CSS/emailStyle.html" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Baskets.AddQuantityBasketController">

    <Label text="Enter recipient's email address:" />
    <TextField fx:id="emailField" />

    <Button fx:id="shareButton" onAction="#ShareBasket" text="Share Basket" />

    <!-- Optional: Message area to display feedback to the user -->
    <Label fx:id="messageLabel" />

</VBox>
